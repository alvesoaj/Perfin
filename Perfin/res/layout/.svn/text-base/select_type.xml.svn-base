<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/background" android:gravity="center">
    	<TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout1" android:layout_alignParentLeft="true" android:layout_width="wrap_content">
    		<TextView android:id="@+id/selectType" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center_horizontal" android:textSize="15px" android:textStyle="bold" android:textColor="@color/Black" android:textColorHighlight="@color/White" android:text="@string/select_type_spinner_label"></TextView>
    		<Spinner android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/spinner_select_type"></Spinner>
    		<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/select_type_button" android:text="@string/select_type_button_label" android:drawableRight="@drawable/shopping_cart_icon" android:width="50px"></Button>
    	</TableLayout>	
    </RelativeLayout>
</LinearLayout>