<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/background"
    >
    
    <RelativeLayout android:id="@+id/relativeLayout1" 
    		android:layout_height="match_parent" 
    		android:layout_width="match_parent" 
    		android:gravity="center"
    		android:background="#A8A8A880">
        
        <TableLayout android:id="@+id/tableLayout1" 
        		android:layout_alignParentLeft="true" 
        		android:layout_height="wrap_content" 
        		android:layout_width="match_parent"
        		>
        	
        	<TableRow android:id="@+id/tableRow1" 
        			android:layout_width="match_parent" 
        			android:layout_height="wrap_content">
        		
        		<ImageView android:layout_width="wrap_content" 
        				android:src="@drawable/credit_card_icon" 
        				android:id="@+id/imageView1" 
        				android:layout_height="wrap_content">
        		</ImageView>
        		
        		<TextView android:layout_width="wrap_content" 
        				android:id="@+id/card_description_head" 
        				android:layout_height="wrap_content" 
        				android:text="@string/card_description_head_label"
        				android:textColor="@color/Black"
        				android:textSize="18dp"
        				>
        		</TextView>
            
            </TableRow>
            
            <TableRow android:id="@+id/tableRow1" 
            		android:layout_width="match_parent" 
            		android:layout_height="wrap_content">
                
                <TextView android:layout_width="match_parent" 
                		android:typeface="serif" 
                		android:id="@+id/date_label" 
                		android:layout_height="wrap_content" 
                		android:text="@string/date_label" 
                		android:textColor="@color/Black">
                </TextView>
                
                <EditText android:layout_height="wrap_content" 
                		android:id="@+id/date_input" 
                		android:text="@string/blank_label" 
                		android:layout_width="200dip" 
                		android:editable="false"
                		android:nextFocusDown="@+id/value_input">
                </EditText>
            
            </TableRow>
            
            <TableRow android:id="@+id/tableRow1" 
            		android:layout_width="wrap_content" 
            		android:layout_height="wrap_content">
                
                <TextView android:layout_width="wrap_content" 
                		android:typeface="serif" 
                		android:layout_height="wrap_content" 
                		android:id="@+id/value_label" 
                		android:text="@string/value_label" 
                		android:textColor="@color/Black">
                </TextView>
                
                <EditText android:layout_height="wrap_content" 
                		android:inputType="numberDecimal" 
                		android:id="@+id/value_input" 
                		android:text="@string/blank_label" 
                		android:layout_width="150dip"
                		android:nextFocusDown="@+id/description_input">
                </EditText>
            
            </TableRow>
            
            <TableRow android:id="@+id/tableRow1" 
            		android:layout_width="wrap_content" 
            		android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" 
                		android:typeface="serif" 
                		android:layout_height="wrap_content" 
                		android:id="@+id/description_label" 
                		android:text="@string/description_label" 
                		android:textColor="@color/Black">
                </TextView>
                <EditText android:layout_height="wrap_content" 
                		android:text="@string/blank_label" 
                		android:layout_width="150dip" 
                		android:id="@+id/description_input" 
                		android:inputType="text"
                		android:nextFocusDown="@+id/spinner_select_categoria">
                </EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow1" 
            		android:layout_width="wrap_content" 
            		android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" 
                		android:typeface="serif" 
                		android:layout_height="wrap_content" 
                		android:id="@+id/categoria_label" 
                		android:text="@string/categoria_label" 
                		android:textColor="@color/Black"
                		android:layout_gravity="center_vertical">
                </TextView>
                <Spinner android:layout_height="wrap_content" 
                		android:layout_width="wrap_content" 
                		android:id="@+id/spinner_select_categoria"
                		android:nextFocusDown="@+id/parcel_input">
                </Spinner>
            </TableRow>
            <TableRow android:id="@+id/tableRow1" 
            		android:layout_width="wrap_content" 
            		android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" 
                		android:typeface="serif" 
                		android:layout_height="wrap_content" 
                		android:textColor="@color/Black" 
                		android:id="@+id/parcel_label" 
                		android:text="@string/parcel_label">
                </TextView>
                <EditText android:layout_height="wrap_content" 
                		android:text="@string/blank_label" 
                		android:layout_width="150dip" 
                		android:id="@+id/parcel_input" 
                		android:inputType="number"
                		android:nextFocusDown="@+id/insert_entry_button">
                </EditText>
            </TableRow>
            <TableRow android:layout_width="wrap_content" 
            		android:layout_height="wrap_content" 
            		android:id="@+id/table_row_input_button" 
            		android:gravity="center_horizontal">
                <Button android:layout_width="wrap_content" 
                		android:layout_height="wrap_content" 
                		android:id="@+id/insert_entry_button" 
                		android:text="@string/insert_entry_button">
                </Button>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>